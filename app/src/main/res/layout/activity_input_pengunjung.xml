<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sembada.aponk.input_Pengunjung">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="Silahkan isi data"
                android:textColor="@color/background"

                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Nama"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/pengujung_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nama" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Alamat"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/pengujung_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan alamat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Instansi"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/pengujung_spiner1i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pengunjung_instasi"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Nomor Identitas (KTP/SIM/Pasport)"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/pengunjung_nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nomor identitas" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Kewarganegaraan"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/pengunjung_spiner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pengujung_statuswarganegara"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Jenis Kelamin"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/pengunjung_spiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pengunjung_jeniskelamin"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Kelompok Usia"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <Spinner
                android:layout_marginTop="5dp"
                android:id="@+id/pengunjung_spiner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pengunjung_kelompokusia"
                android:layout_width="match_parent"
                android:layout_height="0dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ubuntu_regular"
                android:text="Keperluan"
                android:textColor="@color/background"
                android:textSize="16sp" />

            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/pengunjung_keperluan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan keperluan"
                android:background="@drawable/border"
                android:minLines="5"
                android:padding="5dp"
                android:gravity="top|left"
                 />

            <Button
                android:id="@+id/btn_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ambil foto wajah"
                android:textColor="@color/white"
                android:background="@color/background"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_camera_alt_24"
                android:background="@drawable/border"
                android:id="@+id/click_image" />

            <Button
                android:id="@+id/pengunjung_btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_corner"
                android:text="Masuk"
                android:textColor="@color/white" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/red_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="@+id/linearLayout2"
            android:visibility="gone"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>